# frozen_string_literal: true

def blank?(obj)
  return obj.strip.empty? if obj.is_a?(String)

  obj.respond_to?(:empty?) ? obj.empty? : !obj
end

# region ios
identifier = ENV['FL_APP_IDENTIFIER']
app_identifier(identifier) unless blank?(identifier)

env_team_id = ENV['FL_TEAM_ID']
team_id(env_team_id) unless blank?(env_team_id)

env_itc_team_id = ENV['FL_ITC_TEAM_ID']
itc_team_id(env_itc_team_id) unless blank?(env_itc_team_id)
# endregion ios

# region android
android_name = ENV['FL_PACKAGE_NAME']
package_name(android_name) unless blank?(android_name)

json_file = ENV['FL_GOOGLE_JSON_FILE']
json_key_file(json_file) unless blank?(json_file)
# endregion android
